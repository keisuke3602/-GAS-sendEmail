function sendEmail() {
  const sheet = SpreadsheetApp.openById('fileID').getActiveSheet();
  const lastRow = sheet.getLastRow();
  
  const doc = DocumentApp.openById('fileID');
  const docText = doc.getBody().getText();

  const subject = 'Hello, this is Kei from Glasp';
  const attachfile = DriveApp.getFileById('fileID').getBlob();
  const options = {attachments: attachfile};

  for (let i = 2; i <= lastRow; i++) {
    
    const name = sheet.getRange(i, 1).getValue();
    const recipient = sheet.getRange(i, 2).getValue();

    const body = docText
      .replace('{name}', name);

    MailApp.sendEmail(recipient,subject,body,options);
  }
}
